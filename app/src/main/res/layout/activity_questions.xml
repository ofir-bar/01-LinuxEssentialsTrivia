<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.QuestionsActivity"
		android:background="@color/colorAccent">


	<android.support.constraint.Guideline
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/guideline3"
			android:orientation="horizontal"
			app:layout_constraintGuide_percent="0.3"/>

	<TextView
			android:text="@string/activity_questions__question_title_default"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/activity_questions__question_title"
			android:textSize="@dimen/descriptionText"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintBottom_toTopOf="@+id/guideline_0.3"
			app:layout_constraintTop_toTopOf="parent"/>

	<android.support.constraint.Guideline
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/guideline_0.3"
			android:orientation="horizontal"
			app:layout_constraintGuide_percent="0.3"/>


	<android.support.constraint.Guideline
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/guideline_0.5"
			android:orientation="horizontal"
			app:layout_constraintGuide_percent="0.7"/>

	<RadioButton
			android:text="@string/activity_questions__question_radio_button"
			android:textSize="@dimen/regularText"
			android:layout_width="@dimen/stretchToFill"
			android:layout_height="@dimen/stretchToFill"
			android:id="@+id/activity_questions__question_radio_button"
			android:gravity="start|top"
			app:layout_constraintTop_toTopOf="@+id/guideline_0.3"
			app:layout_constraintBottom_toTopOf="@+id/guideline_0.5"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			/>

	<Button
			android:text="@string/activity_questions__next_button"
			android:textSize="@dimen/regularText"
			android:background="@drawable/button_shape"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/activity_questions__next_button"
			app:layout_constraintTop_toBottomOf="@+id/activity_questions__question_radio_button"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			/>


</android.support.constraint.ConstraintLayout>